@{
    ViewData["Title"] = "Add publishing";
}

<head>
    <link rel="stylesheet" href="~/css/addProductForm.css" asp-append-version="true" />
</head>

<div class="add-product-form">
    <div class="form-header">

    </div>
    <div class="form-box">
        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" id="name" name="name" required>
        </div>
        <div class="form-group">
            <label for="author">Author</label>
            <input type="text" id="author" name="author" required>
        </div>
        <div class="form-group">
            <label for="genre">Genre</label>
            <select id="genre" name="genre" required>

            </select>
        </div>
        <div class="form-group">
            <label for="pages">Page number</label>
            <input type="number" id="pages" name="pages" required>
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea id="description" name="description"></textarea>
        </div>
        <div class="form-group">
            <label for="file">Place PDF File of your masterpiece</label>
            <input type="file" id="file" name="file" accept=".pdf" required>
        </div>
        <button type="submit" class="submit-button">ORDER</button>
    </div>
    <div class="form-button">
        <button></button>
    </div>
</div>